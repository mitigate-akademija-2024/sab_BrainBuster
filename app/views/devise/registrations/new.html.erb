<h2 class="mb-4 text-2xl font-bold text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.label :email, class: 'block font-bold text-gray-800 mb-2' %>
    <%= f.email_field :email, class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-500', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: 'block font-bold text-gray-800 mb-2' %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-500', autocomplete: "new-password" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password_confirmation, class: 'block font-bold text-gray-800 mb-2' %>
    <%= f.password_field :password_confirmation, class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-500', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'inline-block w-full rounded bg-gray-600 px-5 py-3 text-white font-medium hover:bg-gray-700 focus:outline-none focus:ring active:bg-gray-500' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<style>
  .signup-form {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #f9f9f9;
  }
</style>

