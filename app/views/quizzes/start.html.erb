<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= @title %></h1>

  <!-- Search Form -->
  <div class="mb-6">
    <%= form_with(url: start_quiz_path, method: :get, local: true, class: "flex") do |form| %>
      <%= text_field_tag :search, params[:search], placeholder: "Search quizzes...", class: "w-full px-4 py-2 rounded-l-lg border border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" %>
      <%= form.submit "Search", class: "bg-indigo-600 text-white px-4 py-2 rounded-r-lg hover:bg-indigo-700 focus:outline-none focus:ring active:bg-indigo-500" %>
    <% end %>
  </div>

  <ul class="space-y-6 mb-8">
    <% @quizzes.each do |quiz| %>
      <li class="border rounded-lg p-6 bg-white shadow-lg flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-indigo-600 mb-2">
            <%= link_to quiz.title, fill_quiz_path(quiz), class: 'hover:underline' %>
          </h2>
          <p class="text-gray-700"><%= quiz.description %></p>
        </div>
        <div class="flex space-x-4">
          <%= link_to 'Start', fill_quiz_path(quiz), class: btn_class %>
          <%= link_to 'Leaderboard', leaderboard_path(quiz_id: quiz.id), class: btn_green %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="text-left mt-6 mb-6">
    <%= link_to 'Back to My Quizzes', quizzes_path, class: btn_back %>
  </div>
</div>

