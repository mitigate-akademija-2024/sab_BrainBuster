<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Quiz Completed</h1>

  <div class="border rounded-lg p-6 bg-white shadow-lg">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Your Score</h2>
    <p class="text-2xl text-indigo-600">
      <%= @score.score %> / <%= @quiz.questions.count %> correct
    </p>
  </div>

  <div class="text-left mt-6 mb-6">
  <%= link_to 'Back to My Quizzes', quizzes_path, class: 'inline-block rounded bg-gray-600 px-5 py-3 text-sm font-medium text-white hover:bg-gray-700 focus:outline-none focus:ring active:bg-gray-500' %>
</div>
</div>

