<div class="flex flex-col mb-4 space-y-4">
  <div>
    <p class="text-gray-700"><%= @description %></p>
  </div>
  <div class="flex gap-4">
    <%= link_to "New quiz", new_quiz_path, class: 'inline-block rounded bg-[#287094] px-4 py-2 text-sm font-medium text-white hover:bg-[#1e5d72] focus:outline-none focus:ring active:bg-[#1b5265]' %>
    <%= link_to 'Start a Quiz', start_quiz_path, class: 'inline-block rounded bg-[#287094] px-4 py-2 text-sm font-medium text-white hover:bg-[#1e5d72] focus:outline-none focus:ring active:bg-[#1b5265]' %>
  </div>
</div>

<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
  <% @quizzes.each do |quiz| %>
    <article class="rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg sm:p-6">
      <a href="<%= quiz_path(quiz) %>">
        <h3 class="text-lg font-medium text-gray-900">
          <%= quiz.title %>
        </h3>
      </a>

      <p class="mt-4 text-sm text-gray-500">
        <%= quiz.description.truncate(150) %>
      </p>

      <p class="mt-4 text-sm text-gray-500">
        <strong>ID:</strong> <%= quiz.id %> <br>
        <strong>Created At:</strong> <%= format_date(quiz.created_at) %>
      </p>

      <a href="<%= quiz_path(quiz) %>" class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
        Open
        <span aria-hidden="true" class="block transition-all group-hover:ms-0.5 rtl:rotate-180">
          &rarr;
        </span>
      </a>
    </article>
  <% end %>
</div>

