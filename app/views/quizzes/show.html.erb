<%= render @quiz %>


<div>
  <%= link_to "Edit this quiz", edit_quiz_path(@quiz), class: "inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500" %>
  <%= link_to "Back to quizzes", quizzes_path, class: "inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500 ml-4" %>
  <%= button_to "Destroy this quiz", @quiz, method: :delete, class: "inline-block rounded border border-red-600 bg-red-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-red-600 focus:outline-none focus:ring active:text-red-500 ml-4" %>
</div>
