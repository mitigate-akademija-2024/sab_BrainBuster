<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Quiz Leaderboard</h1>

  <% if @quiz %>
    <h2 class="text-2xl font-semibold text-indigo-600 mb-4"><%= @quiz.title %> Leaderboard</h2>
  <% end %>

  <ul class="space-y-6 mb-8">
    <li class="border rounded-lg p-6 bg-white shadow-lg">
      <table class="w-full text-left">
        <thead>
          <tr>
            <th class="px-4 py-2 text-sm font-medium text-gray-500 uppercase tracking-wider">Rank</th>
            <th class="px-4 py-2 text-sm font-medium text-gray-500 uppercase tracking-wider">User Email</th>
            <th class="px-4 py-2 text-sm font-medium text-gray-500 uppercase tracking-wider">Score</th>
            <% unless @quiz %>
              <th class="px-4 py-2 text-sm font-medium text-gray-500 uppercase tracking-wider">Quiz Title</th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @top_scores.each_with_index do |score, index| %>
            <tr>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= index + 1 %></td>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= score.email %></td>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= score.score %></td>
              <% unless @quiz %>
                <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= score.quiz_title %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </li>
  </ul>

  <div class="text-left mt-6">
    <%= link_to 'Back to Quizzes', quizzes_path, class: 'inline-block rounded bg-gray-600 px-5 py-3 text-sm font-medium text-white hover:bg-gray-700 focus:outline-none focus:ring active:bg-gray-500' %>
  </div>
</div>
